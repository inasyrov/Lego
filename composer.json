{
  "name": "BEM/DSL",
  "description": "BEM DSL for HTML generation",
  "keywords": [
    "templating",
    "templates",
    "views"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Nasyrov Evgenii",
      "email": "inasyrov@ya.ru",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=5.6.0",
    "composer/installers": "^1.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^2.6",
    "phpunit/phpunit": "^5.4"
  },
  "autoload": {
    "psr-4": {
      "BEM\\DSL\\": "src"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "BEM\\DSL\\": "tests"
    }
  },
  "scripts": {
    "lint": "phpcs",
    "test": "phpunit"
  }
}
